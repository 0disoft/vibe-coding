{
	"name": "vibe-coding",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"postbuild": "[ -d build ] && svelte-sitemap --domain https://yoursite.com || echo 'Skipping sitemap (no build/ folder)'",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "biome format --write .",
		"lint": "biome check .",
		"lint:fix": "biome check --fix .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@fontsource-variable/jetbrains-mono": "^5.2.8",
		"@iconify-json/lucide": "^1.2.79",
		"@inlang/paraglide-js": "^2.6.0",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^24.10.2",
		"@unocss/preset-web-fonts": "^66.5.10",
		"@vitest/browser-playwright": "^4.0.15",
		"playwright": "^1.57.0",
		"pretendard": "^1.3.9",
		"svelte": "^5.45.8",
		"svelte-check": "^4.3.4",
		"svelte-sitemap": "^2.7.1",
		"typescript": "^5.9.3",
		"unocss": "^66.5.10",
		"vite": "^7.2.7",
		"vitest": "^4.0.15",
		"vitest-browser-svelte": "^2.0.1"
	},
	"dependencies": {
		"@cap.js/server": "^4.0.4",
		"@cap.js/widget": "^0.1.32",
		"@fontsource-variable/inter": "^5.2.8",
		"@fontsource-variable/noto-sans-arabic": "^5.2.10",
		"@fontsource-variable/noto-sans-devanagari": "^5.2.8",
		"@fontsource-variable/noto-sans-jp": "^5.2.9",
		"@fontsource-variable/noto-sans-sc": "^5.2.9",
		"@fontsource-variable/noto-sans-thai": "^5.2.8",
		"@sinclair/typebox": "^0.34.41",
		"better-auth": "^1.4.5",
		"marked": "^17.0.1",
		"shiki": "^3.19.0"
	}
}
