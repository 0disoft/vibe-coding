{
	"name": "vibe-coding",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"postbuild": "bun src/scripts/postbuild-sitemap.ts",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:scripts": "tsc -p tsconfig.scripts.json --noEmit",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "biome format --write .",
		"lint": "biome check .",
		"lint:fix": "biome check --fix .",
		"update:cookie": "node src/scripts/update_cookie_messages.js",
		"update:msgs": "node src/scripts/update_messages_18_langs.js",
		"update:missing": "node src/scripts/update_missing_privacy_messages.js",
		"gen:cookie": "node src/scripts/generate_translated_cookie_policies_full.js",
		"fix:newlines": "node src/scripts/fix_json_newlines.js",
		"test:unit": "vitest",
		"test": "bun run test:unit -- --run && bun run test:e2e",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@iconify-json/lucide": "^1.2.81",
		"@inlang/paraglide-js": "^2.7.0",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/bun": "^1.3.4",
		"@types/node": "^24.10.4",
		"@unocss/preset-web-fonts": "^66.5.10",
		"@vitest/browser-playwright": "^4.0.15",
		"playwright": "^1.57.0",
		"pretendard": "^1.3.9",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.4",
		"svelte-sitemap": "^2.7.1",
		"typescript": "^5.9.3",
		"unocss": "^66.5.10",
		"vite": "^7.2.7",
		"vitest": "^4.0.15",
		"vitest-browser-svelte": "^2.0.1"
	},
	"dependencies": {
		"@cap.js/server": "^4.0.5",
		"@cap.js/widget": "^0.1.32",
		"@fontsource-variable/inter": "^5.2.8",
		"@fontsource-variable/manrope": "^5.2.8",
		"@fontsource-variable/noto-sans-arabic": "^5.2.10",
		"@fontsource-variable/noto-sans-devanagari": "^5.2.8",
		"@fontsource-variable/noto-sans-jp": "^5.2.9",
		"@fontsource-variable/noto-sans-sc": "^5.2.9",
		"@fontsource-variable/noto-sans-thai": "^5.2.8",
		"@fontsource/maple-mono": "^5.2.6",
		"@fontsource/pacifico": "^5.2.7",
		"@fontsource/righteous": "^5.2.7",
		"@sinclair/typebox": "^0.34.41",
		"better-auth": "^1.4.7",
		"marked": "^17.0.1",
		"shiki": "^3.20.0"
	}
}
