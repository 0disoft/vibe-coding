{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		// JavaScript 파일도 프로젝트에 포함
		"allowJs": true,
		// 템플릿 기본값: JS는 허용하되 타입 체크는 하지 않음 (복사 후 마찰 최소화)
		// 필요하면 tsconfig.scripts.json로 스크립트만 별도 체크하세요.
		"checkJs": false,
		// CommonJS 모듈의 default import 허용
		"esModuleInterop": true,
		// 파일명 대소문자 일관성 강제 (Windows/Mac 호환)
		"forceConsistentCasingInFileNames": true,
		// 번들러 환경에 맞는 모듈 해석 방식
		"moduleResolution": "bundler",
		// JSON 파일 import 허용
		"resolveJsonModule": true,
		// node_modules 타입 정의 검사 건너뛰기 (빌드 속도 향상)
		"skipLibCheck": true,
		// 소스맵 생성 (디버깅용)
		"sourceMap": true,
		// 엄격한 타입 검사 모드
		"strict": true,
		// import type 구문 강제 (런타임 번들 최적화)
		"verbatimModuleSyntax": true
	},
	"exclude": [
		"node_modules/**",
		"src/service-worker.js",
		"src/service-worker/**/*.js",
		"src/service-worker.ts",
		"src/service-worker/**/*.ts",
		"src/service-worker.d.ts",
		"src/service-worker/**/*.d.ts",
		"src/lib/components/design-system/__test__/**"
	]
	// 경로 별칭은 SvelteKit이 자동 관리
	// $lib: src/lib (기본 제공)
	// 추가 별칭은 svelte.config.js의 kit.alias에서 설정
}
